          <FieldType type="Products.Archetypes.Field.StringField">TEXT</FieldType>
          <FieldMode type="Products.Archetypes.Field.StringField">DISPLAY</FieldMode>
          <Formula type="Products.Archetypes.Field.TextField"><![CDATA[#NB il documento viene renderizzato usando la form specificata in settings/labelcolumn
db=context.getParentDatabase()
renderForm=db.getForm('bo_readers')
content=renderForm.displayDocument(context)
html=''
if content:
    html='<fieldset class="scheduler-border"><legend class="scheduler-border"><a href="%s/EditDocument?openwithform=bo_readers"> UTENTI ABILITATI </a></legend>%s</fieldset>'%(context.absolute_url(),content)

    
return html]]></Formula>
