        <element id="allegati_alla_controfirma" title="Documenti da controfirmare" type="PlominoField">
          <id type="Products.Archetypes.Field.StringField">allegati_alla_controfirma</id>
          <FieldType type="Products.Archetypes.Field.StringField">TEXT</FieldType>
          <FieldMode type="Products.Archetypes.Field.StringField">DISPLAY</FieldMode>
          <Formula type="Products.Archetypes.Field.TextField"><![CDATA[#NB il documento viene renderizzato usando la form specificata in settings/labelcolumn
db=context.getParentDatabase()
idx = db.getIndex()
if not 'numero_pratica' in idx.indexes():
    return []

brains = idx.dbsearch(dict(numero_pratica=context.getItem('numero_pratica'),iol_tipo_app=['integrazione','iniziolavori','finelavori','voltura']))

elenco={}

attachments = context.getItem('iol_attachments',{})
for f in attachments:
    if attachments[f]=='pencil':
        if not context.getId() in elenco:
            elenco[context.getId()]=[]
        elenco[context.getId()].append(f)

for brain in brains:
    doc=brain.getObject()
    attachments = doc.getItem('iol_attachments',{})
    for f in attachments:
        if attachments[f]=='pencil':
            if not doc.getId() in elenco:
                elenco[doc.getId()]=[]
            elenco[doc.getId()].append(f)
       
return elenco]]></Formula>
