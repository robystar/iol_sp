      <onSaveDocument type="Products.Archetypes.Field.TextField"><![CDATA[db = context.getParentDatabase()
parentField=context.getItem("parentField","allegati_integrazione")
parentFieldDesc = parentField+'DESC'
parentFiles=context.getItem(parentField,{})
parentFilesDesc=context.getItem(parentFieldDesc,{})
newFile = context.getItem('NEWFILE')
newDesc = context.getItem('NEWDESC')
parentFiles.update(newFile)


k=newFile.keys()[0]
parentFilesDesc.update({k:newDesc})
context.setItem(parentField,parentFiles)
context.setItem(parentFieldDesc,parentFilesDesc)
context.removeItem('NEWFILE')
context.removeItem('NEWDESC')
context.setItem('Form','frm_integrazione_dati')]]></onSaveDocument>
