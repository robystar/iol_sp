          <Formula type="Products.Archetypes.Field.TextField"><![CDATA[db=context.getParentDatabase()
renderForm=db.getForm('sub_allegati_elenco')
content=asUnicode(context.editWithForm(renderForm)) if context.isEditMode() else asUnicode(renderForm.displayDocument(context))    
html=''
if content:
    html=html+'<fieldset class="scheduler-border"><legend class="scheduler-border"><a href="%s/EditDocument?openwithform=frm_%s_allegati">%s prot. %s del %s </a></legend><div class="v-content well">%s</div></fieldset>'%(context.absolute_url(),context.getItem('iol_tipo_app'),context.getItem('iol_form_title','Documento'),context.getItem('numero_protocollo'),context.getItem('data_protocollo_testo'),content)  
return html]]></Formula>
